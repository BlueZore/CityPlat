<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="3dp"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <!-- 菜单1 -->

            <LinearLayout
                android:id="@+id/_tabMenu1"
                style="@style/MuneLayout"
                android:layout_width="0dp"
                android:layout_weight="1" >

                <Button
                    android:id="@+id/_menu1"
                    style="@style/MuneTextView"
                    android:background="@drawable/nav_hover"
                    android:onClick="Menu1_Click"
                    android:textColor="@color/muneselect" />
            </LinearLayout>

            <!-- 菜单2 -->

            <LinearLayout
                android:id="@+id/_tabMenu2"
                style="@style/MuneLayout"
                android:layout_width="0dp"
                android:layout_weight="1" >

                <Button
                    android:id="@+id/_menu2"
                    style="@style/MuneTextView"
                    android:onClick="Menu2_Click" />
            </LinearLayout>

            <!-- 菜单3 -->

            <LinearLayout
                android:id="@+id/_tabMenu3"
                style="@style/MuneLayout"
                android:layout_width="0dp"
                android:layout_weight="1" >

                <Button
                    android:id="@+id/_menu3"
                    style="@style/MuneTextView"
                    android:onClick="Menu3_Click" />
            </LinearLayout>

            <!-- 菜单4 -->

            <LinearLayout
                android:id="@+id/_tabMenu4"
                style="@style/MuneLayout"
                android:layout_width="0dp"
                android:layout_weight="1" >

                <Button
                    android:id="@+id/_menu4"
                    style="@style/MuneTextView"
                    android:onClick="Menu3_Click" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>